{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/.vscode/a.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "echo": true,
                "showReuseMessage": false,
                "clear": true,
                "close": false,
                "focus": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "编译当前选中的 .c 文件"
        },
        {
            "type": "cppbuild",
            "label": "build files in the dir",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/*.c",
                "-o",
                "${workspaceFolder}/.vscode/a.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "echo": true,
                "showReuseMessage": false,
                "clear": true,
                "close": false,
                "focus": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "编译当前选中的文件目录下的所有 .c 文件"
        }
    ],
    "version": "2.0.0"
}